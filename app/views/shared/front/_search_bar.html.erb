<div>
	<%= bootstrap_flash %>
	<div class="search_auto_wrapper">
		<div class="search_auto">
			<%= form_for :search, url: search_path, method: 'get' do |f| %>
				<%= f.hidden_field :category_id, value: 1 %>
				<div class="sell_box sell_box_1">
					<h2><strong>Search</strong> Vehicle</h2>
					<div class="select_wrapper hm">
						<span class="custom_chb_wrapper">
							<span class="custom_chb">
								<%= f.radio_button :condition, "All", {id: "all", checked: params[:search].present? ? params[:search][:condition] == 'All' : ''} %>
								<label for="all"></label><span class="fr">ALL</span> 
							</span>
						</span>
					</div>
					<div class="select_wrapper hm">
						<span class="custom_chb_wrapper">
							<span class="custom_chb">
								<%= f.radio_button :condition, "Used", {id: "used", checked: params[:search].present? ? params[:search][:condition] == 'Used' : '' } %>
								<label for="used"></label><span class="fr">USED</span>
							</span>
						</span>
					</div>
					<div class="select_wrapper hm">
						<span class="custom_chb_wrapper">
							<span class="custom_chb">
								<%= f.radio_button :condition, "New",  {id: "new", checked: params[:search].present? ? params[:search][:condition] == 'New' : ''} %>
								<label for="new"></label><span class="fr">NEW</span>
							</span>
						</span>
					</div>
					<div class="select_wrapper hm">
						<span class="custom_chb_wrapper">
							<span class="custom_chb">
								<%= f.radio_button :condition, "Classic", {id: "classic", checked: params[:search].present? ? params[:search][:condition] == 'Classic' : ''} %>
								<label for="classic"></label><span class="fr">CLASSIC</span>
							</span>
						</span>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Body Type:</strong></label>
				    <%= f.select :type_product, options_for_select(@types), {include_blank: 'Choose One'}, class: 'custom-select-mod' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Brand:</strong></label>
						<%= f.select :brand, options_for_select(@brands), {include_blank: 'Choose One'}, class: 'custom-select-mod', id: 'brand_product', data: {url: brand_model_path} %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Model: </strong></label>
				    <%= f.select :model, options_for_select([]), {include_blank: 'Choose One'}, class: 'custom-select-mod', id: 'model_product' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Transmission</strong></label>
				    <%= f.select :transmission, options_for_select(@transmissions), {include_blank: 'Choose One'}, class: 'custom-select-mod' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Minimum Year:</strong></label>
				    <%= f.select :year, options_for_select(@years), {include_blank: 'Choose Min Year'}, class: 'custom-select-mod' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Maximal Year:</strong></label>
				    <%= f.select :year, options_for_select(@years), {include_blank: 'Choose Max Year'}, class: 'custom-select-mod' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Minimum Price:</strong></label>
				    <%= f.select :price, options_for_select(@prices), {include_blank: 'Select Min Price'}, class: 'custom-select-mod' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Maximal Price:</strong></label>
				    <%= f.select :price, options_for_select(@prices), {include_blank: 'Select Max Price'}, class: 'custom-select-mod' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Province </strong></label>
						<%= f.text_field :province, class: 'custom-select-mod custom-select-mod2', id: 'province_attributes' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>City </strong></label>
						<%= f.text_field :city, class: 'custom-select-mod custom-select-mod2', id: 'city_attributes' %>
					</div>
					<div class="select_wrapper hm" style="width:100%">
						<label><span>* </span><strong>Keyword:</strong></label>
						<%= f.text_field :name, class: 'custom-select-mod' %>
					</div>
					<%= f.submit :search, class: 'btn_search' %>
					<div class="clear"></div>
				</div>
			<% end %>
			<div class="clear"></div>
		</div>
	</div>
	<div class="clear"></div>
</div>
<div class="br"></div>

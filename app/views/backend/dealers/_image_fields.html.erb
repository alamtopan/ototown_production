<div class="nested-field nested-fill">
  <%= link_to_remove_association '<button type="reset" class="btn btn-sm btn-warning">X Remove</button>'.html_safe, f, { wrapper_class: 'nested-field' } %>
  <div class="form-group">
    <%= f.label :image, '', class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= image_tag f.object.image, class: "small-image" %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, '', class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>
</div>
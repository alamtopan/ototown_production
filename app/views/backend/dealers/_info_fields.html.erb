<fieldset>
  <legend><i class="fa fa-angle-right"></i> Info Dealer</legend>
  <div class="form-group">
    <%= f.label :category_type, 'Category Type', class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.select :category_type, options_for_select(@category_type,@dealer.dealer_info.category_type), {include_blank: 'Choose One'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, 'Active?', class: 'col-md-4 control-label' %>
    <div class="col-md-1">
      <%= f.check_box :active, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, 'Dealer Name', class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.text_field :title, rows: 4, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, '', class: 'col-md-4 control-label' %>
    <div class="col-md-8">
      <%= f.text_area :description, rows: 4, class: 'ckeditor form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, '', class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.text_field :phone, rows: 4, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, '', class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.text_field :email, rows: 4, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, '', class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.text_area :address, rows: 4, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :map, 'Google Map', class: 'col-md-4 control-label' %>
    <div class="col-md-3">
      <%= f.text_field :longitude, class: 'form-control', placeholder: "Longitude" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :latitude, class: 'form-control', placeholder: "Latitude" %>
    </div>
  </div>
</fieldset>
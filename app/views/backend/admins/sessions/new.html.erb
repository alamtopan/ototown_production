<div id="login-container" class="animation-fadeIn">
	<div class="login-title text-center">
		<h1 class="ototown">Oto<span class="orange">town.com</span></h1>
	</div>
	<div class="block remove-margin float-right" style="width:100%">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<div class="form-group">
				<div class="col-xs-12">
					<div class="input-group">
						<span class="input-group-addon"><i class="gi gi-envelope"></i></span>
						<%= f.email_field :email, :autofocus => true, class: "form-control input-lg", placeholder: "Email" %>
					</div>
				</div>
			</div>
			<div class="br"></div>
			<div class="form-group">
				<div class="col-xs-12">
					<div class="input-group">
						<span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
						<%= f.password_field :password, class: "form-control input-lg", placeholder: "Password" %>
					</div>
				</div>
			</div>
			<div class="br"></div>
			<div class="form-group form-actions float-right">
				<button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-angle-right"></i> Login to Dashboard</button>
			</div>
		<% end %>
	</div>
</div>



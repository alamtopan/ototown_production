<%= render layout: 'backend/shared/prepare_table', 
           locals: {
                     table_name:  'News', 
                     button_name: 'News',
                     add_method: true
                   } do %>
	<table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
		<thead>
			<tr>
				<th class="text-center">No</th>
				<th>Title News</th>
				<th>Category News</th>
				<th>Created At</th>
				<th>Publish On</th>
				<th class="text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
		<% @news.each_with_index do |news,index| %>
			<tr>
				<td class="text-center"><%= index + 1 %></td>
				<td><a href="javascript:void(0)"><%= news.title %></a></td>
				<td><span class="label label-primary"><%= news.category_news.try(:title) %></span></td>
				<td><%= news.created_at.strftime('%d %b %Y - at %I:%M%p') %></td>
				<td><%= news.publish %></td>
				<td class="text-center">
					<%= render partial: 'backend/shared/action_buttons', locals: {resource: news, confirmation: "#{news.title} will be deleted, are you sure ?"} %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% end %>
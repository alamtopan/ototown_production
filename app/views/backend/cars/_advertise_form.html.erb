<div class="form-group">
  <%= f.label :active, 'Active?', class: 'col-md-4 control-label' %>
  <div class="col-md-1">
    <%= f.check_box :active, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :price, class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <div class="input-group">
      <%= f.text_field :price, data: {autonumeric: true}, class: 'form-control', placeholder: 'Price' %>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.label :loan_term, class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <div class="input-group">
      <%= f.number_field :loan_term, class: 'form-control', placeholder: 'Loan Term' %>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.label :interest_rate, class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <div class="input-group">
      <%= f.number_field :interest_rate, class: 'form-control', placeholder: 'Interest Rate' %>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.label :down_payment, class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <div class="input-group">
      <%= f.text_field :down_payment, data: {autonumeric: true}, class: 'form-control', placeholder: 'Down Payment' %>
    </div>
  </div>
</div>
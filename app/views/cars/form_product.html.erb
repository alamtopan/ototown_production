<div class="margin-top80">
	<div id="content" class="back-white">
		<div class="content">
			<div class="breadcrumbs">
				<%= link_to 'Home', root_path %>
				<%= image_tag '../../assets/marker_2.gif' %>
				<%= link_to 'My Vehicle', products_path %>
				<%= image_tag '../../assets/marker_2.gif' %>
				Add Car
			</div>
			<div class="main_wrapper">
				<div class="main_wrapper">
					<h1><strong>Add</strong> Car</h1>
					<%= form_for @product, url: create_product_path, html:{method: "post", id: 'vehicle-form',multipart: true} do |f| %>
						<div class="step_breadcrumb">
							<a href="#" class="active" id="step_1">step 1.  SELECT CATEGORIES</a>
							<a href="#" class="" id="step_2">step 2.  TECHNICAL CHARACTERISTICS</a>
							<a href="#" class="" id="step_3">step 3.  PHOTO</a>
						</div>
						<div class="sell_box step_1">
							<h2><strong>Categories</strong></h2>
							<div class="col_opt">
								<span class="custom_chb_wrapper">
									<span class="custom_chb">
										<%= f.radio_button :condition, "All", {} %>
									</span>
									<label>ALL</label>
								</span>
							</div>
							<div class="col_opt">
								<span class="custom_chb_wrapper">
									<span class="custom_chb">
										<%= f.radio_button :condition, "Used", {} %>
									</span>
									<label>USED</label>
								</span>
							</div>
							<div class="col_opt">
								<span class="custom_chb_wrapper">
									<span class="custom_chb">
										<%= f.radio_button :condition, "New", {} %>
									</span>
									<label>NEW</label>
								</span>
							</div>
							<div class="col_opt_last">
								<span class="custom_chb_wrapper">
									<span class="custom_chb">
										<%= f.radio_button :condition, "Classic", {} %>
									</span>
									<label>CLASSIC</label>
								</span>
							</div>
							<div class="br"></div>
							<div class="col_1">
								<div class="select_wrapper">
									<label><span>* </span><strong>Category:</strong></label>
							    <%= f.select :category_id, options_for_select([['Car','1'],['Spare parts','2']]), {include_blank: 'Select'}, class: 'text' %>
								</div>
							</div>
							<div class="col_2">
								<div class="input_wrapper">
									<label><span>* </span><strong>Title:</strong></label>
									<%= f.text_field :name, class: 'text full_100' %>
								</div>
							</div>
							<div class="col_3">
								<div class="select_wrapper">
									<label><span>* </span><strong>Status:</strong></label>
							    <%= f.select :status, options_for_select([['Publish','1'],['Save Draft','0']]), {}, class: 'text' %>
								</div>
							</div>
							<div class="input_wrapper" style="width:98%">
								<label><span>* </span><strong>Description:</strong></label>
								<%= f.text_area :description, class: 'post_content', style: 'width:100%' %>
							</div>
							<div class="clear"></div>
							<h2></h2>
							<div class="btn-next">
								<a href="#" class="btn3">Back</a>
								<a href="#" class="btn1">Next</a>
							</div>
						</div>
						<div class="sell_box step_2" style="display: none;">
							<h2><strong>Characteristics</strong></h2>
							<div class="col_1">
								<div class="input_wrapper">
									<label><span>* </span><strong>Province:</strong></label>
									<%= f.text_field :province, class: 'text full_100', id: 'province_attributes' %>
								</div>
								<div class="input_wrapper">
									<label><span>* </span><strong>City:</strong></label>
									<%= f.text_field :city, class: 'text full_100', id: 'city_attributes' %>
								</div>
								<div class="input_wrapper">
									<label><span>* </span><strong>Location:</strong></label>
						      <%= f.text_field :location, class: 'text full_100', placeholder: 'Location' %>
								</div>
								<div class="select_wrapper">
									<label><span>* </span><strong>Body Type:</strong></label>
							    <%= f.select :type_product, options_for_select(@types), {include_blank: 'Choose One'}, class: 'text' %>
								</div>
							</div>
							<div class="col_2">
								<div class="select_wrapper">
									<label><span>* </span><strong>Brand:</strong></label>
									<%= f.select :brand, options_for_select(@brands), {include_blank: 'Choose One'}, class: 'text', id: 'brand_product', data: {url: brand_model_path} %>
								</div>
								<div class="select_wrapper">
									<label><span>* </span><strong>Model:</strong></label>
							    <%= f.select :model, options_for_select([]), {include_blank: 'Choose One'}, class: 'text', id: 'model_product' %>
								</div>
								<div class="select_wrapper cars">
									<label><span>* </span><strong>Transmission:</strong></label>
							    <%= f.select :transmission, options_for_select(@transmissions), {include_blank: 'Choose One'}, class: 'text' %>
								</div>
								<div class="select_wrapper">
									<label><span>* </span><strong>Year:</strong></label>
							    <%= f.select :year, options_for_select(@years), {include_blank: 'Choose One'}, class: 'text' %>
								</div>
							</div>
							<div class="col_3">
								<div class="input_wrapper cars">
									<label><span>* </span><strong>Cylinders:</strong></label>
						      <%= f.text_field :cyclinders, class: 'text full_100', placeholder: 'Cyclinders' %>
								</div>
								<div class="input_wrapper cars">
									<label><span>* </span><strong>Fuel:</strong></label>
						      <%= f.text_field :fuel, class: 'text full_100', placeholder: 'Fuel' %>
								</div>
								<div class="select_wrapper cars">
									<label><span></span><strong>Color: </strong></label>
							    <%= f.select :color, options_for_select(@colors), {include_blank: 'Choose One'}, class: 'text' %>
								</div>
								<div class="input_wrapper">
									<label><span>* </span><strong>Price:</strong></label>
						      <%= f.text_field :price, class: 'text full_100' %>
								</div>
							</div>
							<div class="clear"></div>
							<div class="clear"></div>
							<h2></h2>
							<div class="checkbox_items">
								<span class="custom_chb_wrapper">
									<span class="custom_chb">
										<%= f.check_box :negotiable, {}%>
									</span>
									<label>Price Negotiable</label>
								</span>
							</div>
							<h2></h2>
							<div class="btn-next">
								<a href="#" class="btn1">Next</a>
							</div>
						</div>
						<div class="sell_box step_3" style="display: none;">
							<h2><strong>Vehicle</strong> photos</h2>
							<div id="loaded-images"></div>
							<%= f.fields_for :images do |image| %>
						    <%= render 'image_fields', f: image %>
						  <% end %>
						  <div class="links">
						    <%= link_to_add_association '<button type="submit" id="add-image" class="btn btn-sm btn-primary">+ Add Image</button>'.html_safe, f, :images %>
						  </div>
							<div class="clear"></div>
							<h2></h2>
							<div class="btn-next">
								<a href="#" class="btn3">Back</a>
								<%= f.submit :add, class: 'btn10' %>
							</div>
						</div>
					<% end %>
				</div>
				<div class="clear"></div>
			</div>
		</div>
	</div>
</div>
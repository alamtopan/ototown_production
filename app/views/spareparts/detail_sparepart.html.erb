<div class="margin-top80">
	<div id="content">
		<div class="content">
			<div class="breadcrumbs">
				<%= link_to 'Home', root_path %>
				<%= x_image_tag '../../assets/marker_2.gif' %>
				<%= link_to 'Sparepart', spareparts_path %>
				<%= x_image_tag '../../assets/marker_2.gif' %>
				<%= @sparepart.name %>
			</div>
			<div class="main_wrapper">
				<div class="main_wrapper ">
					<div class="cars_id">
						<% if @sparepart.brand %>
							<div class="id">Brand <span><%= @sparepart.brand %></span></div>
						<% end %>
						<% if @sparepart.model %>
							<div class="views">Model <%= "#{@sparepart.model} #{@sparepart.year}" %></div>
						<% end %>
					</div>
					<h1>
						<%= @sparepart.name %>
					</h1>
					<div class="car_image_wrapper">
						<% if @sparepart.status_sold.present? && @sparepart.status_sold == "Sold Out" %>
							<%= image_tag "sold-out.png", class: "sold-out" %>
						<% end %>
						<%= render 'shared/front/slide_car_detail', images: @sparepart.images %>
					</div>
					<div class="car_characteristics">
						<a href="#" class="print" onclick="window.print();return false;"></a>
						<div class="price" data-currency="Rp" data-price="<%= @sparepart.price %>" style="margin-left:10px; margin-top:15px;">
							<%= @sparepart.price.present? ? number_to_currency(@sparepart.price, unit: 'Rp.') : 'Call Us' %> <%= "/nego" if @sparepart.negotiable == true %>
						</div>
						<div class="clear"></div>
						<div class="features_table">
							<% if @sparepart.model && @sparepart.type_product %>
								<div class="line">
									<div class="left">Model, Body type:</div>
									<div class="right"><%= "#{@sparepart.model}, #{@sparepart.type_product}" %></div>
								</div>
							<% end %>
							<% if @sparepart.year %>
								<div class="line">
									<div class="left">Fabrication:</div>
									<div class="right"><%= @sparepart.year %></div>
								</div>
							<% end %>
							<% if @sparepart.condition %>
								<div class="line">
									<div class="left">Condition:</div>
									<div class="right">
										<%= @sparepart.condition %>
									</div>
								</div>
							<% end %>
							<% if @sparepart.year %>
								<div class="line">
									<div class="left">Year:</div>
									<div class="right">
										<%= @sparepart.year %>
									</div>
								</div>
							<% end %>
							<% if @sparepart.city && @sparepart.province %>
								<div class="line">
									<div class="left">Location:</div>
									<div class="right">
										<%= "#{@sparepart.city}, #{@sparepart.province}" %>
									</div>
								</div>
							<% end %>
						</div>
					</div>
					<%= render "shared/front/share_media" %>
					<div class="clear"></div>
					<div class="info_box">
						<div class="sparepart_contacts">
							<h2><strong>Detail</strong> Information</h2>
							<% if @sparepart.location %>
								<div>
									<b>Location: </b>
									<br/>
									<span class="glyphicon glyphicon-map-marker"></span> <%= @sparepart.location %> ,
									<span class="glyphicon glyphicon-time"></span> <%= time_ago_in_words(@sparepart.updated_at) %>
								</div><br/>
							<% end %>
							<%= @sparepart.description.html_safe %>
							<p></p>
							<div class="clear"></div>
							<div class="clear"></div>
						</div>
						<div class="fb-comment-sparepart">
							<div id="fb-root"></div>
							<script>
								(function(d, s, id) {
								  var js, fjs = d.getElementsByTagName(s)[0];
								  if (d.getElementById(id)) return;
								  js = d.createElement(s); js.id = id;
								  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=1444092132515552";
								  fjs.parentNode.insertBefore(js, fjs);
								}(document, 'script', 'facebook-jssdk'));
							</script>
							<div class="fb-comments" data-href="<%= detail_sparepart_url(@sparepart) %>" data-num-posts="10" data-colorscheme="light" mobile="false">
							</div>
						</div>
					</div>
					<div class="sparepart_sidebar">
						<div id="loan_calculator-2" class="widget_loan_calculator">
							<div class="loan calculator-wrapper">
								<div class="widget contacts_widget credit-simulation width-20">
									<h2><strong>Contact</strong></h2>
									<div class="post">
										<%= image_tag @sparepart.user.profile.avatar.url(:medium), style: 'max-width:70px;float:left;margin-right:20px;' %>
										<p><b><%= @sparepart.user.profile.full_name %></b></p>
										<p class="member-at">Join At : <br>
											<%= time_ago_in_words(@sparepart.user.created_at) %>
										</p>
										<div class="clear"></div>
									</div><br>
									<% if @sparepart.user.profile.address %>
										<div class="addr detail"><%= @sparepart.user.profile.address %></div>
									<% end %>
									<% if @sparepart.user.profile.phone %>
										<div class="phones detail"><%= @sparepart.user.profile.phone %></div>
									<% end %>
									<% if @sparepart.user.email %>
										<div class="email detail single_line">
											<a href="mailto:<%= @sparepart.user.email %>" rel="moc/eciujretniw//elpmaxe" class="email_link_replace markered"><%= @sparepart.user.email %>
											</a>
										</div>
									<% end %>
									<div class="clear"></div>
								</div>
							</div>
						</div>
					</div>
					<div class="clear"></div>
					<div class="clear"></div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>

<%= render 'shared/front/paginate_result/paginate_result_spareparts' %>
<%= render 'shared/front/side_bar_spareparts' %>
<div class="main_catalog" style="padding-top:0px;">
  <ul class="catalog_table">
    <% @spareparts.each_with_index do |sparepart, index| %>
      <li class="is_dealer">
        <%= link_to detail_sparepart_path(sparepart), class: 'thumb' do %>
          <div class= "car_catalog">
            <%= image_tag sparepart.images.first.image if sparepart.images.present? %>
            <% if sparepart.status_sold.present? && sparepart.status_sold == "Sold Out" %>
              <%= image_tag "sold-out.png", class: "sold-out" %>
            <% end %>
          </div>
        <% end %>
        <div class="catalog_desc">
          <div class="location">Location: <b><%= sparepart.city %></b></div>
          <div class="title_box">
            <h4>
              <%= link_to detail_sparepart_path(sparepart) do %>
                <%= sparepart.name %>
              <% end %>
            </h4>
            <div class="price"><%= number_to_currency(sparepart.price, unit: 'Rp.') %> <%= "/nego" if sparepart.negotiable == true %></div>
          </div>
          <div class="clear"></div>
          <div class="grey_area">
            <span>Fabrication: <b><%= sparepart.year %></b></span>
            <span>Brand: <b><%= sparepart.brand %></b></span>
            <span>Model: <b><%= sparepart.model %></b></span>
            <span>Condition: <b><%= sparepart.condition %></b></span>
          </div>
          <div style="float:right"></div>
          <%= link_to detail_sparepart_path(sparepart),class: "more markered" do %>
            View details
          <% end %>
        </div>
      </li>
    <% end %>
    <%= raw '<div class="alert alert-danger"><a class="close" data-dismiss="alert">Ã—</a>No Data Found</div>' unless @spareparts.present? %>
  </ul>
  <div class="bottom_cat=alog_box padding-top0">
    <div class="pagination">
      <%= paginate @spareparts %>
    </div>
    <div class="clear"></div>
  </div>
</div>
<div class="clear"></div>

<h1><%= @page.title %></h1>
<div class="grey_area">
	<%= @page.created_at.strftime('%d %b %Y - at %I:%M%p') %>
	<div class="blog_category">
		<%= @page.category.try(:title) %>
	</div>
</div>
<br>
<div class="blog">
	<div class="blog_single_post">
		<div class="post">
			<p>
				<%= @page.content.html_safe %>
			</p>
		</div>
	</div>
</div>

